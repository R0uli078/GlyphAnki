<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <!-- Removed POST_NOTIFICATIONS: no notifications used -->
    <uses-permission android:name="com.ichi2.anki.permission.READ_WRITE_DATABASE" />
    <uses-permission android:name="com.nothing.ketchum.permission.ENABLE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <!-- Runtime media read permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <queries>
        <package android:name="com.ichi2.anki" />
        <package android:name="com.ichi2.anki.debug" />
        <provider android:authorities="com.ichi2.anki.flashcards" />
    </queries>

    <application
        android:name="com.alcyon.glyphanki.GlyphAnkiApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlyphAnki">

        <!-- Glyph Nothing key for direct matrix access -->
        <meta-data
            android:name="NothingKey"
            android:value="24111" />

        <service
            android:name="com.alcyon.glyphanki.service.ReviewForegroundService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <service
            android:name="com.alcyon.glyphanki.accessibility.VolumeAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service" />
        </service>

        <activity android:name="com.alcyon.glyphanki.ui.SettingsActivity" />

        <activity android:name="com.alcyon.glyphanki.ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>